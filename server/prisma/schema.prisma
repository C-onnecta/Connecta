model User {
  id          String     @id @default(uuid())
  full_name   String
  email       String     @unique
  endereco    String?
  telephone   String?
  description String?
  user_type   String
  Campaign    Campaign[]

  @@map("users")
}

model Campaign {
  id               String   @id @default(uuid())
  name             String
  collection_point String
  description      String
  observation      String?
  categories       String
  progress         Float    @default(0.00)
  status           String
  participants     Int
  started_at       DateTime

  grantee    User   @relation(fields: [id_grantee], references: [id])
  id_grantee String

  Campaign_item Campaign_item[]

  @@map("campaigns")
}

model Campaign_item {
  id       String @id @default(uuid())
  name     String
  quantity Int
  measure  String

  campaign    Campaign @relation(fields: [id_campaign], references: [id])
  id_campaign String

  @@map("campaign_items")
}
